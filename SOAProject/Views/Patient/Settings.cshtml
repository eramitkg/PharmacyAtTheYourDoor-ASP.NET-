@model SOAProject.Models.Patient
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/popper.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-8 order-lg-2">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Profil</a>
                </li>
                <li class="nav-item">
                    <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Düzenle</a>
                </li>
            </ul>
            <div class="tab-content py-4">
                <div class="tab-pane active" id="profile">
                    <h5 class="mb-3">@Model.USERNAME @Model.SURNAME</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>TC</h6>
                            <p>
                                @Model.TC
                            </p>
                            <h6>Telefon</h6>
                            <p>
                                @Model.PHONE
                            </p>
                            <h6>İl</h6>
                            <p>
                                @Model.PROVINCE
                            </p>
                            <h6>İlçe</h6>
                            <p>
                                @Model.COUNTY
                            </p>
                            <h6>Eczanesi</h6>
                            <p>
                                @Model.PHARMACYNAME
                            </p>
                        </div>


                    </div>
                    <!--/row-->
                </div>

                <div class="tab-pane" id="edit">
                    @using (Html.BeginForm("Settings", "Patient", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Eczaneler</label>

                            <div class="col-lg-9">
                                @Html.DropDownList("Pharmacy", null, new { @class = "form-control input-lg" })

                            </div>
                            <br />


                        </div>
                        <input type="submit" class="btn btn-primary btn-sm" value="Değiştir">

                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4 order-lg-1 text-center">
            <img src="~/Styles/img/user.png" class="mx-auto img-fluid img-circle d-block" alt="avatar"/>
        </div>
    </div>
</div>

